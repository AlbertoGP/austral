module body Test is
    record Foo: Linear is
        bar: Nat8;
    end;

    generic [T: Type, R: Region]
    function Accept_Ref(ref: &![T, R]): Unit is
        return nil;
    end;

    function main(): ExitCode is
        -- Create a linear record.
        var foo: Foo := Foo(bar => 'a');
        -- Anonymously borrow it.
        Accept_Ref(&!foo);
        -- Consume it by destructuring.
        let { bar: Nat8 } := foo;
        return ExitSuccess();
    end;
end module body.
