module body Test is
    record Foo: Linear is
        bar: Nat8;
    end;

    function main(): ExitCode is
        -- Create a linear record.
        let foo: Foo := Foo(bar => 'a');
        -- Borrow it.
        borrow foo as fooref in rho do
            -- Borrow it again.
            borrow foo as fooref2 in rho2 do
                printLn(fooref2->bar);
            end;
        end;
        -- Consume the record by destructuring.
        let { bar: Nat8 } := foo;
        return ExitSuccess();
    end;
end module body.
